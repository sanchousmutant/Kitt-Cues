{
  "name": "kitt-cues",
  "version": "1.0.0",
  "description": "Бильярд с кошками - уникальная браузерная игра с анимированными котиками",
  "main": "index.html",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "build-with-types": "tsc --noEmit && vite build",
    "preview": "vite preview --host",
    "type-check": "tsc --noEmit --skipLibCheck",
    "type-check:watch": "tsc --noEmit --skipLibCheck --watch",
    "clean": "rimraf dist node_modules/.vite",
    "deploy": "npm run build-with-types && gh-pages -d dist",
    "analyze": "npx vite-bundle-analyzer dist",
    "serve": "npm run preview",
    "format": "prettier --write src/**/*.{ts,js,css,md}",
    "lint": "eslint src --ext .ts,.js --fix"
  },
  "keywords": [
    "game",
    "billiards",
    "cats",
    "javascript",
    "typescript",
    "html5",
    "canvas-free",
    "browser-game",
    "physics",
    "animations"
  ],
  "author": "Kitt-Cues Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.8.1",
    "gh-pages": "^6.3.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.12"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sanchousmutant/Kitt-Cues.git"
  },
  "bugs": {
    "url": "https://github.com/sanchousmutant/Kitt-Cues/issues"
  },
  "homepage": "https://sanchousmutant.github.io/Kitt-Cues/"
}
